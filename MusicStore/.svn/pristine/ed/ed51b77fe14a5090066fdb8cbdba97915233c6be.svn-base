<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<h:html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<h:head>
	<title>Customer administration</title>
</h:head>

<ui:composition template="/resources/templates/basic/template.xhtml">
	<ui:define name="content">

		<h:form>
			<h3>Using JSF outcome</h3>
			<h:panelGrid id="customerPanel" columns="2">
				<h:outputLabel value="ID" />
				<h:inputText value="#{contactController.contact.id}" />
				<br />
				<h:message for="telephone" style="color:red" />
				<h:commandButton value="Search By ID"
					action="#{contactController.getContactById(contactController.contact.id)}" />
			</h:panelGrid>

			<h:outputText value="Contact" />
			<h:outputText value="#{contactController.contact}" />
			<br />
			<h:outputText value="#{contactController.customers}" />
		</h:form>

		<h:form>
			<h3>Using Managed Bean</h3>
			<h:commandButton action="#{navigationController.moveToIndex}"
				value="Index Page" />
		</h:form>

		<h:form>
			<h:commandLink action="#{navigationController.showPage}"
				value="Page1">
				<f:param name="pageId" value="1" />
			</h:commandLink>
			<h:commandLink action="#{navigationController.showPage}"
				value="Page2">
				<f:param name="pageId" value="2" />
			</h:commandLink>
			<h:commandLink action="#{navigationController.showPage}" value="Home">
				<f:param name="pageId" value="3" />
			</h:commandLink>
		</h:form>

	</ui:define>
</ui:composition>
</h:html>
