<h:html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<h:head>
	<title>Customer administration</title>
</h:head>

<ui:composition template="/resources/templates/basic/template.xhtml">
	<ui:define name="content">
		<h:form>
			<h:outputLabel value="Header:" />
			<h:inputText value="#{postController.temporaryPost.header}"
				style="height: 27px; width: 427px;" />
			<br />
			<br />
			<h:outputLabel value="Content:" />
			<h:inputTextarea row="20" col="40"
				value="#{postController.temporaryPost.content}"
				style="height: 114px; width: 427px; " />

			<br />
			<br />
			<h:commandButton value="Save" action="#{postController.save(authenticationController.authenticationEJB.currentSessionUser)}" />
		</h:form>
	</ui:define>
</ui:composition>
</h:html>
